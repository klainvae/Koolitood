// Sum of numbers in string

let num = '3 7 2 5 8'
let splitNum = num.split(' ').map(Number)
let sum = 0
for (let i = 0; i < splitNum.length; i++) 
     sum += splitNum[i]

console.log(sum)

// Output: 25


// Sum of odd numbers in string

let num = '3 7 2 5 8'
let splitNum = num.split(' ').map(Number)
let sum = 0
for (let i = 0; i < splitNum.length; if (i % 2 == 0) {
  i++  
}) 
     sum += splitNum[i]

console.log(sum)
